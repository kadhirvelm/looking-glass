{
  "name": "looking-glass",
  "version": "1.0.0",
  "description": "A desktop application that allows you to see patterns in data.",
  "dependencies": {},
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.14.0",
    "electron-builder": "^21.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.15.1",
    "eslint-plugin-react-hooks": "^1.7.0",
    "lerna": "^3.20.1",
    "prettier": "^1.19.1",
    "typescript": "^3.7.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "node scripts/cleanPackages",
    "dev": "yarn dev:interface & yarn dev:electron",
    "dev:interface": "cd packages/interface && yarn dev",
    "dev:electron": "cd packages/electron && yarn dev",
    "build": "lerna run build",
    "distribution": "node scripts/distribution",
    "lint": "lerna run lint",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kadhirvelm/looking-glass.git"
  },
  "author": "kadhirvelm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kadhirvelm/looking-glass/issues"
  },
  "homepage": "https://github.com/kadhirvelm/looking-glass#readme"
}
