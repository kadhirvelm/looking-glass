{
  "name": "looking-glass",
  "version": "0.1.0",
  "description": "A desktop application that allows you to see patterns in data.",
  "dependencies": {
    "typescript": "^3.7.2"
  },
  "private": true,
  "devDependencies": {
    "lerna": "^3.20.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "compile": "lerna run compile",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'",
    "check-packages": "yarn clean && yarn compile && yarn test && yarn lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kadhirvelm/looking-glass.git"
  },
  "author": "kadhirvelm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kadhirvelm/looking-glass/issues"
  },
  "homepage": "https://github.com/kadhirvelm/looking-glass#readme"
}
